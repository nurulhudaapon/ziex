pub fn Page(allocator: zx.Allocator) zx.Component {
    return (
        <section @allocator={allocator} data-src={@src().file}>
            // <pre>
            //     {
            //         \\const data = 
            //         \\
            //         \\ Test 
            //         \\ Test 2
            //         \\
            //         \\ name: "test" ;
            //         \\
            //         \\
            //     }
            // </pre>
        </section>
    );
}

pub fn Comments(_: zx.ComponentContext) zx.Component {
    return (
        <div>
            // <p>Hello</p>
            // <p>World</p>

            <section>
                // <p>Hello</p>
                // <p>World</p>
            </section>
        </div>
    );
}

pub fn EmptyComments(_: zx.ComponentContext) zx.Element {
    return (
        <div>
            //
            //
            <p>Content after empty comments</p>
        </div>
    );
}

pub fn CommentsWithSpecialChars(_: zx.ComponentContext) zx.Element {
    return (
        <div>
            // Special chars: <>&"'`~!@#$%^&*()_+-=[]{}|;:,.<>?
            // Unicode: ä½ å¥½ Ù…Ø±Ø­Ø¨Ø§ ðŸŽ‰ emoji test
            // URL: https://example.com/path?query=value&other=123
            // Email: test@example.com
            <p>After special char comments</p>
        </div>
    );
}

pub fn CommentsWithExpressions(_: zx.ComponentContext) zx.Element {
    const value = "test";
    return (
        <div>
            // {value}
            // {"literal string"}
            // {1 + 2}
            // <span>{value}</span>
            <p data-value={value}>Actual content</p>
        </div>
    );
}

pub fn NestedComments(_: zx.ComponentContext) zx.Element {
    return (
        <div>
            <section>
                <article>
                    // Deeply nested comment
                    // <div>
                    //     <span>
                    //         <a href="#">Link</a>
                    //     </span>
                    // </div>
                    <p>Deep content</p>
                </article>
            </section>
        </div>
    );
}

pub fn CommentsWithAttributes(_: zx.ComponentContext) zx.Element {
    return (
        <div>
