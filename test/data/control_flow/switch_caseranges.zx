pub fn Page(allocator: zx.Allocator) zx.Component {
    const chars = "abcdefg";
    const char = chars[0];

    return (
        <main @allocator={allocator}>
            {switch (char) {
                0, 1, 2, 3 => ("0 or 1 or 2 or 3"),
                4...5, 8, 11...13, 15 => ("4 to 5 or 8 or 11 to 13 or 15"),
                'z', 'x' => ("z or x"),
                'a'...'c' => ("a to c"),
                'd'...'f' => ("d to f"),
                else => ("other"),
            }}
        </main>
    );
}

const zx = @import("zx");
