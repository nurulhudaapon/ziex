pub fn Layout(ctx: zx.LayoutContext, children: zx.Component) zx.Component {
    return (
        <html @allocator={ctx.arena} lang="en-US">
            <head>
                <title>ZX</title>
                <link href="/css/currentStyle.css" rel="stylesheet"/>
            </head>

            <body>
                {children}
                <script src="/assets/main.js" />
            </body>
        </html>
    );
}

const zx = @import("zx");
