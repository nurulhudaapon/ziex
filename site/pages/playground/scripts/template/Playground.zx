pub fn Playground(allocator: zx.Allocator) zx.Component {
    return (
        <div @{allocator}>
            <style>{@embedFile("style.css")}</style>

            <h1>Ziex Playground</h1>
            <p>Welcome to the minimal Ziex Playground demo.</p>
            <p>Edit files and run your code!</p>

            {for ("Ziex") |c| (<i>{c}</i>)}
        </div>
    );
}

const zx = @import("zx");
