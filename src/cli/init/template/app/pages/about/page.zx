pub fn Page(ctx: zx.PageContext) zx.Component {
    return (
        <main @allocator={ctx.arena}>
            <p>{get_about_zx()}</p>
            <a href="/">Back to Home</a>
        </main>
    );
}

pub fn get_about_zx() []const u8 {
    return "Ziex is a framework for building web applications with Zig.";
}

const zx = @import("zx");
